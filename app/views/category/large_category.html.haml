= render partial: 'items/shared/header'
%main.item-box-container.clearfix
  .item-content
    %ul.parts-nav.clearfix
      - @medium_category_items.each do |mcategory|
        %li
          %a.l-category-n
            = mcategory.medium_category
    %section.item-box-content.clearfix
      %h1.items-box-head.clearfix.bold= "#{@large_category_items.first.large_category.large_category}の商品一覧"
      -# .item-boxes.clearfix
      - @large_category_items.each do |item|
        %section.item-box.item-form
          =link_to item_path(item.id) do
            %figure.item-box__photo
              .item-box-image
              = image_tag item.images.first.image, size: "188x188"
            .item-box__text
              %h3.item-box__text__name.font-2
                = item.item_name
              .item-box__text__num.clearfix
                .item-box__text__num__price.bold
                  = number_to_currency(item.price, unit: "¥",precision: 0)
                .item-box__text__num__likes.font-2
                  %i{class: "far fa-heart heart-icon"}
                  %span 10
                .item-box__text__num__tax  (税込)
  = render partial: 'users/footer_sell_btn'
=render "items/shared/footer"
