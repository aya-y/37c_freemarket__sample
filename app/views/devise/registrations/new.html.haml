/ %h2 Sign up
/ = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
/   = devise_error_messages!
/   .field
/     = f.label :email
/     %br/
/     = f.email_field :email, autofocus: true, autocomplete: "email"
/   .field
/     = f.label :password
/     - if @minimum_password_length
/       %em
/         (#{@minimum_password_length} characters minimum)
/     %br/
/     = f.password_field :password, autocomplete: "new-password"
/   .field
/     = f.label :password_confirmation
/     %br/
/     = f.password_field :password_confirmation, autocomplete: "new-password"
/   .actions
/     = f.submit "Sign up"
/ = render "devise/shared/links"
.single-main
  .i-single-container
  %section.l-single-container
  %h2.l-single-head 新規会員登録
  .l-single-inner
    .lsingle-content
      %button#facebook-login.btn-default.btn-sns.btn-sns-facebook
        %i.icon-facebook Facebookで登録
      %button#google-login.btn-default.btn-sns.btn-sns-google
        %i.icon-google-plus Googleで登録
      %a.btn-default.btn-mail{:href => "https://www.mercari.com/jp/signup/registration/"}
        %i.icon-mail メールアドレスで登録

