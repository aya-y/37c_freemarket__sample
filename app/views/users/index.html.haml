= render partial: 'items/shared/header'
.mypage-container.clearfix
  %main.l-container
    %section.user-icon
      %a
        %figure
          %img{alt: "顔写真1", src: "//static-mercari-jp-imgtr2.akamaized.net/images/member_photo_noimage_thumb.png", width: "60"}/
        %h2.bold お名前
        .user-number
          %div
            評価
            %span.bold 0
          %div
            出品数
            %span.bold 0
    %section.notification-todo
      %ul.notification-todo__tabs
        %li.tab-notification.active
          %h3
            %a
              お知らせ
        %li.tab-notification
          %h3
            %a
              やることリスト
      %ul.notification__content
        %li
          %a.notification-todo__content-link
            %figure
              %img.clearfix{src: "//static-mercari-jp.akamaized.net/images/mercari_profile.png", width: "48"}/
            .notification-todo__content-body
              .notification-todo__content-link--text
                発送のお知らせ
              %time
                %i.far.fa-clock.my-gray
                %span 2 日前
                %i.fas.fa-angle-right.fa-lg
