%header.header
  .header-innner
    .clearfix
      %h1.l-left
        =link_to root_path, class: "mercari-home" do
          %image{src: "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?582886128", alt: "mercari", width: "134", height: "36"}
      .form
        %input{type: "search", class: "input-default", name: "keyword", placeholder: "キーワードから探す"}
          = fa_icon 'search', class: 'search-icon'
    .nav-box.clearfix
      %nav.menue-left
        %ul.item-menue
          %li.item-menue__list
            %a  カテゴリーから探す
          %li.item-menue__list
            %a ブランドから探す
      %nav.menue-right
        %ul.login-nav
          %li
            %a.header-btn.btn-red  ログイン
          %li
            %a.header-btn.btn-signup  新規会員登録
