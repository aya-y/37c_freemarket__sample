.default-container
  =render "header"
  %main{class: "white", role: "main" }
    %section.top-main-visual
      .top-contents
        .top-main
          .main-title
            %h2  スマホでかんたん
            %h2  フリマアプリ
          .sub-title
            %p  メルカリはスマホカメラからすぐに出品できる
            %p  購入時も安心な独自システムのアプリです
          .top-main-visual-store.clearfix
            %a.pull-left
              %image{src: "//www-mercari-jp.akamaized.net/assets/img/common/common/app-store.svg?2900942513", class: "app"}
            %a.pull-right
              %image{src: "//www-mercari-jp.akamaized.net/assets/img/common/common/google-play.svg?2900942513",  class: "app"}
        %image{src: "//www-mercari-jp.akamaized.net/assets/img/common/jp/top/main_content_pc.png?2900942513", class: "mobile"}
    .pickup-container
      %h2.pickup-head  全てのカテゴリー
      %section.item-box-container.clearfix
        %h3.sub-title
          %a  全ての商品
        .items-box-content.clearfix
          =render "items"
        .view-all
          %a  全ての商品を見る
  .app-banner
    .app-banner__contents
      .app-banner__contents__inner
        %h2  スマホでかんたんフリマアプリ
        %p  今すぐ無料ダウンロード！
        .app-banner-icon.clearfix
          %figure
            %img{src: "//www-mercari-jp.akamaized.net/assets/img/common/common/mercari_icon.png?2960600120", width: "68", class: "mercari-logo"}
          %ul.clearfix
            %li.apple-logo
              %a
              %image{src: "//www-mercari-jp.akamaized.net/assets/img/common/common/app-store.svg?2900942513", class: "logo"}
            %li.google-logo
              %a
              %image{src: "//www-mercari-jp.akamaized.net/assets/img/common/common/google-play.svg?2900942513",  class: "logo"}
      %figure.mobile-image
        %image{src: "//www-mercari-jp.akamaized.net/assets/img/common/jp/download_content_pc.png?2960600120",  class: "app-image"}
  %footer.global-footer
    =render "footer"
