.single-main
  =render "items/shared/simple_header"
  .l-single-container
    .l-single-head
      %h2 住所入力
    .l-single-inner
      .l-single-content
        = form_for [@user, @userdetail], url: user_user_details_path do |f|
          .form-group
            = f.label :お名前
            = f.label :必須, class: "required"
            = f.text_field :family_name, class: "input-default", autofocus: true, placeholder: "例）山田"
            = f.text_field :first_name, class: "input-default", placeholder: "例）彩"
          .form-group
            = f.label :お名前カナ
            = f.label :必須, class: "required"
            = f.text_field :kana_family_name, class: "input-default", placeholder: "例）ヤマダ"
            = f.text_field :kana_first_name, class: "input-default", placeholder: "例）アヤ"
          .form-group
            = f.label :郵便番号
            = f.label :必須, class: "required"
            = f.text_field :postal_code, class: "input-default", placeholder: "例）1234567"
          .form-group
            = f.label :都道府県
            = f.label :必須, class: "required"
            = f.select :prefecture, User.prefectures.keys,{prompt: '選択してください'}, class: 'input-default'
          .form-group
            = f.label :市区町村
            = f.label :必須, class: "required"
            = f.text_field :address, class: "input-default", placeholder: "例）横浜市緑区"
          .form-group
            = f.label :番地
            = f.label :必須, class: "required"
            = f.text_field :city, class: "input-default", placeholder: "青山 1-1-1"
          .form-group
            = f.label :建物名
            = f.label :任意, class: "any"
            = f.text_field :residential_name, class: "input-default", placeholder: "例）柳ビル103"
          .form-group
            = f.label :誕生日
            = f.label :必須, class: "required"
            = f.text_field :birthday, class: "input-default", placeholder: "例）1990年1月23日→19900123"
          .form-group
            = f.label :電話番号
            = f.label :必須, class: "required"
            = f.text_field :phone_number, class: "input-default", placeholder: "例）09012345678"
          .form-group
            = f.label :プロフィール
            = f.label :任意, class: "any"
            = f.text_area :profile, class: "input-default", placeholder: "5,000文字以内で自己紹介をお願いします"
          .form-group
            = f.submit "次へ進む", class: "next-submit"
  =render "items/shared/simple_footer"
  / = render "devise/shared/links"
  / = invisible_recaptcha_tags {"次へ進む", class: "next-submit"}
  / .form-group
  / = invisible_rechaptcha_tags , class: "next-submit"
