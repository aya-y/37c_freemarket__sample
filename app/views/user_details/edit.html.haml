= render partial: 'items/shared/header'
.mypage-container.clearfix
  %main.l-container
    .l-single-container
      .l-single-head
        %h2 住所変更
    .l-single-form-content
      .l-single-inner
        .l-single-content
          = form_for [@user, @userdetail], url: user_user_detail_path do |f|
            .form-group
              = f.label :お名前
              = f.label :必須, class: "required btn-red"
              = f.text_field :family_name, class: "input-default", autofocus: true, placeholder: "例）山田"
              = f.text_field :first_name, class: "input-default", placeholder: "例）彩"
            .form-group
              = f.label :お名前カナ
              = f.label :必須, class: "required btn-red"
              = f.text_field :kana_family_name, class: "input-default", placeholder: "例）ヤマダ"
              = f.text_field :kana_first_name, class: "input-default", placeholder: "例）アヤ"
            .form-group
              = f.label :郵便番号
              = f.label :必須, class: "required btn-red"
              = f.text_field :postal_code, class: "input-default", placeholder: "例）1234567"
            .form-group
              = f.label :都道府県
              = f.label :必須, class: "required btn-red"
              = f.select :prefecture, UserDetail.prefectures.keys,{prompt: '選択してください'}, class: 'input-default'
            .form-group
              = f.label :市区町村
              = f.label :必須, class: "required btn-red"
              = f.text_field :city, class: "input-default", placeholder: "例）横浜市緑区"
            .form-group
              = f.label :番地
              = f.label :必須, class: "required btn-red"
              = f.text_field :address, class: "input-default", placeholder: "青山 1-1-1"
            .form-group
              = f.label :建物名
              = f.label :任意, class: "any btn-gray"
              = f.text_field :residential_name, class: "input-default", placeholder: "例）柳ビル103"
            .form-group
              = f.label :誕生日
              = f.label :必須, class: "required btn-red"
              = f.text_field :birthday, class: "input-default", placeholder: "例）1990年1月23日→19900123"
            .form-group
              = f.label :電話番号
              = f.label :必須, class: "required btn-red"
              = f.text_field :phone_number, class: "input-default", placeholder: "例）09012345678"

            .form-group
              = f.submit "変更する", class: "btn-default btn-red"
  = render partial: 'users/sidebar'
  = render partial: 'users/footer_sell_btn'
= render partial: 'items/shared/footer'
